<!DOCTYPE html>
<html>
<head>
  <title>Braintree Example</title>
  <link rel="stylesheet" href="/components/bootstrap/dist/css/bootstrap.min.css">

  <script src='/components/jquery/dist/jquery.min.js'></script>
  <script src='/components/bootstrap/dist/js/bootstrap.min.js'></script>

</head>
<body>
  <div class='container'>
    <div class="row">
      <header class="col-sm-12">
        <h1>Braintree Payment Example</h1>
      </header>
    </div>

    <form action="/create" id='cc-form' class='form-horizontal' method='post' role='form' accept-charset="utf-8">
      <!-- card number -->
      <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Card Number</label>
        <div class="col-xs-6 col-sm-3 col-lg-2">
          <input type="text" class='form-control' size="20" autocomplete="off" name="number" data-encrypted-name="number" placeholder='xxxx-xxxx-xxxx-xxxx' />
        </div>
      </div>
      <!-- CVV -->
      <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">CVV</label>
        <div class="col-xs-3 col-sm-2 col-lg-1">
          <input type="text" class='form-control' size="4" autocomplete="off" name="cvv" data-encrypted-name="cvv" placeholder='xxx' />
        </div>
      </div>
      <!-- Expiry date -->
      <div class="form-group">
        <label class="control-label col-xs-12 col-sm-2">Expiration</label>
        <div class="col-xs-3 col-sm-2 col-lg-1">
          <input type="text" class='form-control' size="2" autocomplete="off" name="month" placeholder='MM' />
        </div>

        <div class="col-xs-3 col-sm-2 col-lg-1">
          <input type="text" class='form-control' size="4" autocomplete="off" name="year" placeholder='YYYY' />
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" class='btn btn-primary'>
        </div>
      </div>

    </form>
  </div>

  <script src="/braintree.js"></script>
  <script>
    var braintree = Braintree.create("");
    braintree.onSubmitEncryptForm('cc-form');
  </script>

</body>
</html>